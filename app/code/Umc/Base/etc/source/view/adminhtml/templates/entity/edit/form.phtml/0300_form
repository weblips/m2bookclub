        var activeAnchor = $('#<?php echo $tabsBlock->getId() ?>').tabs('activeAnchor');
        if (activeAnchor.length) {
            $('active_tab_id').value = activeAnchor.prop('id');
        }
        $('active_tab_id').tabsJsObject = $('#<?php echo $tabsBlock->getId() ?>');
    });
