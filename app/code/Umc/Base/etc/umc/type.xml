<types xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Umc_Base:etc/umc/type.xsd">
    <entity id="umc_entity">
        <type id="flat" model="Umc\Base\Model\Core\Entity\Type\Flat" sort="10" translate="label">
            <label>Flat</label>
        </type>
    </entity>
    <entity id="umc_attribute">
        <type id="country" model="Umc\Base\Model\Core\Attribute\Type\Country" sort="10" group="dropdown" translate="label">
            <label>Country</label>
        </type>
        <type id="country_multiselect" model="Umc\Base\Model\Core\Attribute\Type\CountryMultiselect" sort="15" group="multiselect" translate="label">
            <label>Country Multiselect</label>
        </type>
        <type id="date" model="Umc\Base\Model\Core\Attribute\Type\Date" sort="20" group="date" translate="label">
            <label>Date</label>
        </type>
        <type id="decimal" model="Umc\Base\Model\Core\Attribute\Type\Decimal" sort="30" group="text" translate="label">
            <label>Decimal</label>
        </type>
        <type id="dropdown" model="Umc\Base\Model\Core\Attribute\Type\Dropdown" sort="40" group="dropdown" translate="label">
            <label>Dropdown</label>
        </type>
        <type id="file" model="Umc\Base\Model\Core\Attribute\Type\File" sort="50" group="file" translate="label">
            <label>File</label>
        </type>
        <type id="image" model="Umc\Base\Model\Core\Attribute\Type\Image" sort="60" group="file" translate="label">
            <label>Image</label>
        </type>
        <type id="int" model="Umc\Base\Model\Core\Attribute\Type\Int" sort="70" group="text" translate="label">
            <label>Integer</label>
        </type>
        <type id="multiselect" model="Umc\Base\Model\Core\Attribute\Type\Multiselect" sort="80" group="multiselect" translate="label">
            <label>Multiselect</label>
        </type>
        <type id="text" model="Umc\Base\Model\Core\Attribute\Type\Text" sort="1" group="text" translate="label">
            <label>Text</label>
        </type>
        <type id="textarea" model="Umc\Base\Model\Core\Attribute\Type\Textarea" sort="100" group="text" translate="label">
            <label>Textarea</label>
        </type>
        <type id="yesno" model="Umc\Base\Model\Core\Attribute\Type\Yesno" sort="110" group="dropdown" translate="label">
            <label>Yes / No</label>
        </type>
        <group id="text" sort="10" translate="label">
            <label>Text</label>
        </group>
        <group id="dropdown" sort="20" translate="label">
            <label>Dropdown</label>
        </group>
        <group id="multiselect" sort="25" translate="label">
            <label>Multiple select</label>
        </group>
        <group id="file" sort="30" translate="label">
            <label>File</label>
        </group>
        <group id="date" sort="40" translate="label">
            <label>Date</label>
        </group>
    </entity>
    <entity id="umc_relation">
        <type id="none" model="Umc\Base\Model\Core\Relation\Type\NoRelation" sort="10" translate="label">
            <label>Has No Relation with</label>
        </type>
        <type id="parent" model="Umc\Base\Model\Core\Relation\Type\ParentRelation" sort="20" translate="label">
            <label>Is Parent For</label>
        </type>
        <type id="child" model="Umc\Base\Model\Core\Relation\Type\ChildRelation" sort="30" translate="label">
            <label>Is Child Of</label>
        </type>
        <type id="sibling" model="Umc\Base\Model\Core\Relation\Type\SiblingRelation" sort="40" translate="label">
            <label>Is Sibling WIth</label>
        </type>
